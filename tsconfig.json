{
  "compilerOptions": {
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "slate-vue-alpha": ["./src"]
    },
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "declaration": true,
    "outDir": "lib"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "site/**/*.ts", "site/**/*.vue"],
  "exclude": ["node_modules", "lib", "dist"]
}
